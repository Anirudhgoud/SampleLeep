<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sign_here"
            android:layout_gravity="center_vertical"
            android:textColor="@color/doTabTextColor"
            android:textSize="24sp"
            app:typeface="NotoSans-Medium" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_rect_with_grey_border">

        <com.goleep.driverapp.helpers.customviews.PaintView
            android:id="@+id/pv_signature"
            android:layout_width="match_parent"
            android:layout_height="340dp" />
    </LinearLayout>


    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/tv_signature_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signature_error"
        android:textColor="@color/red"
        android:visibility="gone"
        android:textSize="11sp"
        app:typeface="NotoSans-Regular" />

    <com.goleep.driverapp.helpers.customfont.CustomButton
        android:id="@+id/bt_done"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue"
        android:text="@string/done"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:typeface="NotoSans-Regular" />

</LinearLayout>