<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:id="@+id/top_label_layout">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_light_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/items_text_view"
            app:typeface="NotoSans-Bold"
            android:textSize="14sp"
            android:text="@string/items_label"/>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/units_text_view"
            android:layout_toLeftOf="@id/value_text_view"
            android:layout_marginRight="60dp"
            app:typeface="NotoSans-Bold"
            android:textSize="14sp"
            android:text="@string/units"/>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:id="@+id/value_text_view"
            app:typeface="NotoSans-Bold"
            android:textSize="14sp"
            android:text="@string/value"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_light_grey"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_label_layout"
        android:layout_above="@id/confirm_button"
        android:id="@+id/cash_sales_recycler_view"/>

    <com.goleep.driverapp.helpers.customfont.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:layout_alignParentBottom="true"
        android:id="@+id/confirm_button"
        app:typeface="NotoSans-Regular"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@color/green"/>
</RelativeLayout>