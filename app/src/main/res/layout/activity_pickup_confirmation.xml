<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.goleep.driverapp.leep.PickupConfirmationActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_information_layout"
        android:orientation="horizontal"
        android:layout_below="@id/toolbar_layout"
        android:background="@color/light_green"
        android:padding="15dp">
        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from_text_view"
            app:typeface="NotoSans-Regular"
            android:textSize="14sp"
            android:textColor="@color/text_light_grey_title"
            android:text="@string/from_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="18dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/map_button"
            android:visibility="gone"
            android:background="@drawable/map_button_bg"
            android:gravity="center">
            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                app:typeface="NotoSans-Regular"
                android:text="@string/map"/>
        </LinearLayout>
        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/from_text_view"
            android:layout_toRightOf="@id/from_text_view"
            android:layout_toLeftOf="@id/map_button"
            android:layout_toStartOf="@id/map_button"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_grey_text"
            android:id="@+id/warehouse_info_text_view"
            android:maxLines="2"
            app:typeface="NotoSans-Regular"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/top_separator"
        android:background="@color/inner_dashboard_blue"
        android:layout_below="@id/top_information_layout"/>

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_pickup_text_view"
        android:layout_marginTop="25dp"
        android:text="@string/confirm_pickup"
        android:layout_below="@id/top_separator"
        android:textSize="22sp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="10dp"
        app:typeface="NotoSans-Regular"
        android:textColor="@color/dark_grey_text"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/expandable_list"
        android:layout_width="match_parent"
        android:layout_below="@id/confirm_pickup_text_view"
        android:layout_above="@id/confirm_button"
        android:layout_height="wrap_content" />
    <com.goleep.driverapp.helpers.customfont.CustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:layout_alignParentBottom="true"
        android:id="@+id/confirm_button"
        app:typeface="NotoSans-Regular"
        android:textSize="18sp"
        android:visibility="visible"
        android:textColor="@color/white"
        android:background="@color/green"/>

</RelativeLayout>
