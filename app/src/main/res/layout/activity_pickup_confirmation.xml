<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goleep.driverapp.leep.PickupConfirmationActivity">

    <include
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/top_information_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_green"
        android:orientation="horizontal"
        android:padding="15dp">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/from_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="18dp"
            android:text="@string/from_top"
            android:textColor="@color/text_light_grey_title"
            android:textSize="14sp"
            app:typeface="NotoSans-Regular" />

        <LinearLayout
            android:id="@+id/map_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/map_button_bg"
            android:gravity="center"
            android:visibility="gone">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/map"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:typeface="NotoSans-Regular" />
        </LinearLayout>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/warehouse_info_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@id/from_text_view"
            android:layout_toLeftOf="@id/map_button"
            android:layout_toRightOf="@id/from_text_view"
            android:layout_toStartOf="@id/map_button"
            android:maxLines="2"
            android:textColor="@color/dark_grey_text"
            android:textSize="14sp"
            app:typeface="NotoSans-Regular" />
    </RelativeLayout>

    <View
        android:id="@+id/top_separator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/inner_dashboard_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/confirm_pickup_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/confirm_pickup"
            android:textColor="@color/dark_grey_text"
            android:textSize="22sp"
            app:typeface="NotoSans-Regular" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/expandable_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirm_pickup_text_view"
            android:layout_above="@id/confirm_button"/>

        <com.goleep.driverapp.helpers.customfont.CustomButton
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:visibility="visible"
            app:typeface="NotoSans-Regular" />
    </RelativeLayout>

</LinearLayout>
