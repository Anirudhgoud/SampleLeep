<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_green"
    android:id="@+id/top_information_layout"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from_text_view"
            app:typeface="NotoSans-Regular"
            android:textSize="14sp"
            android:textColor="@color/text_light_grey_title"
            android:text="@string/from_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/map_button"
            android:background="@drawable/map_button_bg"
            android:gravity="center">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                app:typeface="NotoSans-Regular"
                android:text="@string/map"/>
        </LinearLayout>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/from_text_view"
            android:layout_toRightOf="@id/from_text_view"
            android:layout_toLeftOf="@id/map_button"
            android:layout_toStartOf="@id/map_button"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/dark_grey_text"
            android:id="@+id/warehouse_info_text_view"
            android:maxLines="2"
            app:typeface="NotoSans-Regular"
            android:textSize="14sp"/>
</RelativeLayout>






