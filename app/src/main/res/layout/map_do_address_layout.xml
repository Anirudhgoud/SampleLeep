<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_map_address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F2F2F2"
    android:elevation="3dp"
    android:visibility="gone"
    android:padding="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:inputType="number"
            android:lines="1"
            android:textColor="@color/doTabTextColor"
            android:textSize="18sp"
            app:typeface="NotoSans-Regular" />

        <LinearLayout
            android:id="@+id/ll_do_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/do_number"
                android:textColor="@color/doTabTextColor"
                android:textSize="12sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:id="@+id/tv_do_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/doTabTextColor"
                android:textSize="12sp"
                app:typeface="NotoSans-Bold" />

        </LinearLayout>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textColor="@color/doTabTextColor"
            android:textSize="12sp"
            app:typeface="NotoSans-Regular" />

        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/delivery_by"
                android:textColor="@color/doTabTextColor"
                android:textSize="12sp"
                app:typeface="NotoSans-Bold" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/doTabTextColor"
                android:textSize="12sp"
                app:typeface="NotoSans-Regular" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/preferred_time"
                android:textColor="@color/doTabTextColor"
                android:textSize="12sp"
                app:typeface="NotoSans-Bold" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:id="@+id/tv_preferred_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/doTabTextColor"
                android:textSize="12sp"
                app:typeface="NotoSans-Regular" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_time_to_reach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="end"
            android:lines="1"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/doTabTextColor"
            android:textSize="18sp"
            app:typeface="NotoSans-Regular" />

        <com.goleep.driverapp.helpers.customfont.CustomButton
            android:id="@+id/bt_navigate"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_navigate"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>