<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goleep.driverapp.leep.onboarding.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/login_layout"
        android:layout_centerInParent="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:theme="@style/ThemeSpinner"
                android:background="@null"
                android:paddingLeft="10dp"
                android:dropDownWidth="wrap_content"
                android:enabled="true"
                android:layout_marginTop="12dp"
                android:id="@+id/country_code_spinner"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/white"/>

            </LinearLayout>

            <com.goleep.driverapp.helpers.customfont.CustomEditText
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                style="@style/login_edit_style"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:focusableInTouchMode="true"
                android:inputType="phone"
                android:id="@+id/phone_editText"
                app:typeface="NotoSans-Light"
                android:hint="@string/phone_hint"/>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:layout_margin="10dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_visible_toggle">

            <com.goleep.driverapp.helpers.customfont.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_editText"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="10dp"
                app:typeface="NotoSans-Light"
                android:focusable="true"
                android:focusableInTouchMode="true"
                style="@style/login_edit_style"
                android:inputType="textPassword"
                android:hint="@string/password_hint"/>

        </android.support.design.widget.TextInputLayout>


        <com.goleep.driverapp.helpers.customfont.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:typeface="NotoSans-Regular"
            android:background="@drawable/login_button_bg"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:id="@+id/login_button"
            android:text="@string/log_in_text"/>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="@string/forgot_password"
            android:id="@+id/forgot_password_textView"
            app:typeface="NotoSans-Regular"
            android:textColor="@color/light_grey"/>

    </LinearLayout>

    <ImageView
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_leep_icon"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/login_layout"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
