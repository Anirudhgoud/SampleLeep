<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goleep.driverapp.fragments.CashSalesNewCustomerFragment">

    <RelativeLayout
        android:id="@+id/rl_add_customer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/cash_sales_tab" />
            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="234dp"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32.92dp"
                android:background="@drawable/pickup_icon_bg"
                android:gravity="center"
                android:text="@string/add_customer"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:id="@+id/tv_add_customer"
                />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_add_customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_customer"
                android:textColor="@color/dark_grey_text"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.goleep.driverapp.helpers.customfont.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/business_name"
                    android:textColor="@color/dark_grey_text"
                    android:textSize="14sp" />

                <com.goleep.driverapp.helpers.customfont.CustomEditText
                    android:id="@+id/tv_business_name"
                    android:layout_width="314dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_rect_with_grey_border"
                    android:hint="@string/business_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="11dp"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.goleep.driverapp.helpers.customfont.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/business_type"
                    android:textColor="@color/dark_grey_text"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/sp_business_type"
                    android:layout_width="314dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_rect_with_grey_border"
                    android:hint="@string/business_type"
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="11dp"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.goleep.driverapp.helpers.customfont.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_name"
                    android:textColor="@color/dark_grey_text"
                    android:textSize="14sp" />

                <com.goleep.driverapp.helpers.customfont.CustomEditText
                    android:id="@+id/tv_contact_name"
                    android:layout_width="314dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_rect_with_grey_border"
                    android:hint="@string/contact_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="11dp"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.goleep.driverapp.helpers.customfont.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_number"
                    android:textColor="@color/dark_grey_text"
                    android:textSize="14sp" />

                <com.goleep.driverapp.helpers.customfont.CustomEditText
                    android:id="@+id/tv_contact_number"
                    android:layout_width="314dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_rect_with_grey_border"
                    android:hint="@string/contact_number"
                    android:inputType="textPhonetic"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="11dp"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <com.goleep.driverapp.helpers.customfont.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/email_id"
                    android:textColor="@color/dark_grey_text"
                    android:textSize="14sp" />

                <com.goleep.driverapp.helpers.customfont.CustomEditText
                    android:id="@+id/tv_email_id"
                    android:layout_width="314dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_rect_with_grey_border"
                    android:hint="@string/email_id"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="11dp"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />
            </LinearLayout>

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:id="@+id/tv_confirm"
                android:layout_width="314dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/pickup_icon_bg"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
