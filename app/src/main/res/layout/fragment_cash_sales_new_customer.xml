<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goleep.driverapp.fragments.CashSalesNewCustomerFragment">

    <RelativeLayout
        android:id="@+id/rl_add_customer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_btn_add_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_add_customer_icon" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:id="@+id/tv_add_customer"
                android:layout_width="234dp"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@drawable/pickup_icon_bg"
                android:gravity="center"
                android:text="@string/add_customer"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </RelativeLayout>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_add_customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_customer"
                android:textColor="@color/dark_grey_text"
                android:textSize="22sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/business_name"
                android:textColor="@color/dark_grey_text"
                android:textSize="14sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomEditText
                android:id="@+id/et_business_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_rect_with_grey_border"
                android:hint="@string/business_name"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="11dp"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/business_type"
                android:textColor="@color/dark_grey_text"
                android:textSize="14sp"
                app:typeface="NotoSans-Regular" />

            <Spinner
                android:id="@+id/sp_business_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_rect_with_grey_border"
                android:dropDownVerticalOffset="45dp"
                android:hint="@string/business_type"
                android:inputType="textPersonName"
                android:textColor="@color/text_black"
                android:textSize="18sp" />


            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/contact_name"
                android:textColor="@color/dark_grey_text"
                android:textSize="14sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomEditText
                android:id="@+id/et_contact_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_rect_with_grey_border"
                android:hint="@string/contact_name"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="11dp"
                android:textColor="@color/text_black"
                android:textSize="18sp" />


            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/contact_number"
                android:textColor="@color/dark_grey_text"
                android:textSize="14sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomEditText
                android:id="@+id/et_contact_number"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_rect_with_grey_border"
                android:hint="@string/contact_number"
                android:inputType="number"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="11dp"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                app:typeface="NotoSans-Regular" />


            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/email_id"
                android:textColor="@color/dark_grey_text"
                android:textSize="14sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomEditText
                android:id="@+id/et_email_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_rect_with_grey_border"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="11dp"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                app:typeface="NotoSans-Regular" />

            <com.goleep.driverapp.helpers.customfont.CustomTextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/pickup_icon_bg"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:typeface="NotoSans-Regular" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
