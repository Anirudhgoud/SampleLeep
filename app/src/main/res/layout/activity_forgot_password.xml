<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goleep.driverapp.leep.onboarding.ForgotPasswordActivity">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_leep_icon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <com.goleep.driverapp.helpers.customfont.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            style="@style/login_edit_style"
            android:layout_margin="10dp"
            android:focusable="true"
            android:maxLines="1"
            android:focusableInTouchMode="true"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/email_edit_text"
            app:typeface="NotoSans-Light"
            android:hint="@string/email"/>

        <com.goleep.driverapp.helpers.customfont.CustomButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            app:typeface="NotoSans-Regular"
            android:background="@drawable/login_button_bg"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:id="@+id/submit_button"
            android:text="@string/submit"/>
    </LinearLayout>



</RelativeLayout>
