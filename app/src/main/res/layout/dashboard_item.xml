<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/dashboard_item_bg"
    android:elevation="5dp"
    >

    <LinearLayout
        android:id="@+id/icon_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:background="@drawable/drop_off_icon_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_drop_off_dashboard" />
    </LinearLayout>

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon_layout"
        android:text="@string/dropoff"
        android:textColor="@color/text_black"
        android:textSize="22sp"
        app:typeface="NotoSans-Regular" />

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/drop_off_icon_bg"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="132"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:typeface="NotoSans-Regular"></com.goleep.driverapp.helpers.customfont.CustomTextView>

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_text"
        android:layout_toEndOf="@+id/icon_layout"
        android:layout_toRightOf="@+id/icon_layout"
        android:text="@string/drop_off_below_text"
        android:textColor="@color/dark_grey_text"
        android:textSize="12dp"
        app:typeface="NotoSans-Regular"></com.goleep.driverapp.helpers.customfont.CustomTextView>


</RelativeLayout>