<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:id="@+id/close_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingEnd="18sp"
        android:paddingRight="18sp"
        android:paddingTop="18dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:srcCompat="@drawable/ic_close" />
    </LinearLayout>

    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/close_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/ic_dialog_success" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/success_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/text_black"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt_print"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/message"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_rect_light_blue"
        android:fontFamily="@font/noto_sans"
        android:text="@string/print_invoice"
        android:textColor="@color/white"
        android:visibility="gone" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/bt_print"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/success_dialog_ok_bg"
        android:fontFamily="@font/noto_sans"
        android:text="@string/ok"
        android:textColor="@color/white" />
</RelativeLayout>