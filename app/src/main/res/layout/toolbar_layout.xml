<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:paddingLeft="12dp"
    android:paddingRight="20dp"
    android:layout_marginBottom="16dp">

    <com.goleep.driverapp.helpers.customfont.CustomButton
        android:id="@+id/left_toolbar_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@id/left_toolbar_button"
        android:layout_toRightOf="@id/left_toolbar_button"
        android:visibility="gone">

        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_black"
            android:textSize="24sp"
            app:typeface="NotoSans-Regular" />
    </LinearLayout>

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/right_toolbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/dark_grey"
        android:textSize="18sp"
        app:typeface="NotoSans-Regular" />
</RelativeLayout>