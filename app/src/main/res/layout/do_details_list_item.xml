<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="25dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="25dp">

    <LinearLayout
        android:id="@+id/product_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="12"
        android:orientation="vertical"
        android:paddingRight="5dp">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/product_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/doTabTextColor"
            android:textSize="14sp"
            app:typeface="NotoSans-Regular" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_light_grey_title"
            android:textSize="14sp"
            app:typeface="NotoSans-Regular" />
    </LinearLayout>

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/units_text_view"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="5"
        android:paddingLeft="5dp"
        android:inputType="number"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/text_light_grey_title"
        android:textSize="14sp"
        app:typeface="NotoSans-Regular" />

    <com.goleep.driverapp.helpers.customfont.CustomTextView
        android:id="@+id/amount_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="7"
        android:paddingLeft="5dp"
        android:textColor="@color/doTabTextColor"
        android:textSize="14sp"
        app:typeface="NotoSans-Regular" />

    <CheckBox
        android:id="@+id/product_checkbox"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center_vertical"
        android:layout_weight="2"
        android:button="@drawable/do_item_checkbox_bg" />


</LinearLayout>