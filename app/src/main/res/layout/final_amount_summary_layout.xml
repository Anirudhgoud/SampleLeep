<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_sale"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_current_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/doTabTextColor"
            android:textSize="24sp"
            android:fontFamily="@font/noto_sans" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grand_total"
            android:layout_marginTop="16dp"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_grand_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/doTabTextColor"
            android:textSize="24sp"
            android:fontFamily="@font/noto_sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/previous_balance"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_previous_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/doTabTextColor"
            android:textSize="24sp"
            android:fontFamily="@font/noto_sans" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/outstanding_balance"
            android:textColor="@color/light_grey"
            android:textSize="14sp"
            android:fontFamily="@font/noto_sans" />

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:id="@+id/tv_outstanding_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/doTabTextColor"
            android:textSize="24sp"
            android:fontFamily="@font/noto_sans" />

    </LinearLayout>
</LinearLayout>