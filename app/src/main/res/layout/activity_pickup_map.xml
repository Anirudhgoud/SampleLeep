<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goleep.driverapp.leep.PickupMapActivity">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/top_information_layout"
        android:orientation="horizontal"
        android:layout_below="@id/toolbar_layout"
        android:background="@color/light_green"
        android:padding="15dp">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from_text_view"
            app:typeface="NotoSans-Regular"
            android:textSize="14sp"
            android:textColor="@color/text_light_grey_title"
            android:text="@string/from_top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"/>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/from_text_view"
            android:layout_toRightOf="@id/from_text_view"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/dark_grey_text"
            android:id="@+id/warehouse_info_text_view"
            android:maxLines="2"
            app:typeface="NotoSans-Regular"
            android:textSize="14sp"/>
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_information_layout"
        class="com.google.android.gms.maps.SupportMapFragment" />

    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/white"
        android:padding="20dp"
        android:elevation="3dp"
        android:layout_alignParentBottom="true">

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_name_tv"
            android:textSize="18sp"
            android:textColor="@color/dark_grey_text"
            app:typeface="NotoSans-Regular"/>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_address_tv"
            android:textSize="12sp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_light_grey_title"
            app:typeface="NotoSans-Regular"/>

        <com.goleep.driverapp.helpers.customfont.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/time_to_reach_tv"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            app:typeface="NotoSans-Bold"/>
        
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_navigate"
            android:id="@+id/navigate_iv"/>
    </RelativeLayout>

</RelativeLayout>
