    <style name="HomeScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">false</item>
        <item name="android:windowBackground">@drawable/home_background</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>