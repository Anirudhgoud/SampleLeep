<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/LeepTextViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogTheme">@style/ThemeOverlay.AppCompat.Dialog</item>
        <item name="android:alertDialogTheme">@style/ThemeOverlay.AppCompat.Dialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.AppCompat.Dialog</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="LeepTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <declare-styleable name="TypefacedTextView">
        <attr name="typeface" format="string" />
    </declare-styleable>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>

    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="LoginTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="HomeScreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:windowBackground">@drawable/home_background</item>
    </style>


    <style name="login_edit_style" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:theme">@style/LoginEditTextTheme</item>
    </style>

    <style name="LoginEditTextTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>
