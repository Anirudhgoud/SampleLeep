<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goleep.driverapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".leep.LeepApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".leep.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".leep.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".leep.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".leep.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".leep.PickupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.PickupConfirmationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.DropOffDeliveryOrdersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.DropOffDeliveryOrderDetailsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".leep.DropOffPaymentCollectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.DropOffCollectPaymentMethodActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.DropOffPaymentConfirmationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.PickupMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.ReportsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.StockActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.HistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".leep.WarehouseDropoffActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".leep.HistoryDetailsActivity" />
        <activity android:name=".leep.PickupWarehouseActivity"></activity>
    </application>

</manifest>