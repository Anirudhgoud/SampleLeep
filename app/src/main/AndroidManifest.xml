<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.goleep.driverapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".leep.LeepApp"
        android:allowBackup="false"
        tools:replace="android:allowBackup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".leep.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".leep.LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".leep.HomeActivity"
            android:theme="@style/HomeScreenTheme" />
        <activity
            android:name=".leep.ForgotPasswordActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".leep.PickupActivity"/>
        <activity
            android:name=".leep.PickupConfirmationActivity" />
        <activity
            android:name=".leep.DropOffDeliveryOrdersActivity"/>
        <activity
            android:name=".leep.DropOffDeliveryOrderDetailsActivity" />
        <activity
            android:name=".leep.DropOffPaymentCollectActivity" />
        <activity
            android:name=".leep.DropOffCollectPaymentMethodActivity" />
        <activity
            android:name=".leep.DropOffPaymentConfirmationActivity"/>
        <activity
            android:name=".leep.PickupMapActivity"/>
        <activity
            android:name=".leep.CashSalesActivity" />
        <activity
            android:name=".leep.ReportsActivity"/>
        <activity
            android:name=".leep.StockActivity" />
        <activity
            android:name=".leep.HistoryActivity" />
        <activity
            android:name=".leep.WarehouseDropoffActivity" />
        <activity
            android:name=".leep.HistoryDetailsActivity" />
        <activity
            android:name=".leep.PickupWarehouseActivity"/>
        <activity android:name=".leep.NewCustomerActivity"></activity>
    </application>

</manifest>